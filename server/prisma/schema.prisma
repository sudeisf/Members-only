generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String?
  lastname  String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RevokedToken {
  id        Int      @id @default(autoincrement())
  jti       String   @unique
  expiresAt DateTime
}

model BlacklistedToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

   @@index([expiresAt])
}
model Otp {
  id          Int       @id @default(autoincrement())
  code        String
  email       String
  expiresAt   DateTime
  used        Boolean  @default(false)
  createdAt   DateTime @default(now())

  @@index([code])
  @@index([expiresAt])
}

